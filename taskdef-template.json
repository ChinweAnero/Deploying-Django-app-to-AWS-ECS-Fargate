
{
  "family": "ECS-FAMILY",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::707798379596:role/ecs-name-App",
  "containerDefinitions": [
    {
      "name": "frontend-container",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "App_SETTINGS_MODULE",
          "value": "app.settings"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "task-definition-frontend-taskdef-prod",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "cwagent",
      "image": "707798379596.dkr.ecr.eu-west-2.amazonaws.com/cloudwatch-agent-ecr-repo:latest",
      "essential": false,
      "environment": [
        {
          "name": "CW_CONFIG_CONTENT",
          "value": "{\"metrics\":{\"metrics_collected\":{\"prometheus\":{\"prometheus_config_path\":\"/opt/aws/amazon-cloudwatch-agent/etc/prometheus.yml\"}},\"metrics_destinations\":{\"amp\":{\"region\":\"eu-west-2\",\"workspace_id\":\"ws-9e3281be-1f50-4da3-9eb8-e1576377f610\"}},\"append_dimensions\":{\"ClusterName\":\"esc-prod-cluster\"}}}"


        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cwagent",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "cwagent"
        }
      }
    }
  ]
}
